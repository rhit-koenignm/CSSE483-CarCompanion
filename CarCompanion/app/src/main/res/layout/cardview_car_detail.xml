<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/car_nick_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_nickname"
            android:layout_toRightOf="@id/car_img"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            />

        <TextView
            android:id="@+id/car_ymm_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_mmy"
            android:layout_toRightOf="@+id/car_img"
            android:textSize="20sp"
            android:layout_below="@id/car_nick_txt"/>

        <ImageView
            android:id="@+id/car_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="20dp"
            app:srcCompat="@drawable/ic_baseline_directions_car_24" />

   </RelativeLayout>
</androidx.cardview.widget.CardView>