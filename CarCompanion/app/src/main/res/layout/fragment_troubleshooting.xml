<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/troubleshooting_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Troubleshooting Mode"
        android:textSize="24sp"
        android:layout_margin="60dp"
        android:layout_centerHorizontal="true"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="118dp" />

    <TextView
        android:id="@+id/my_car_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/seafoam"
        android:text="My car is..."
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:layout_below="@+id/troubleshooting_title"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/my_car_is"
        android:id="@+id/troubleshooting_recycler"
        />


</RelativeLayout>